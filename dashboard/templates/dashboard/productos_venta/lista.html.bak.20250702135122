{% block scripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        console.log('üöÄ [PRODUCTOS] P√°gina cargada, inicializando funcionalidad de eliminaci√≥n...');
        console.log('üïê [TIME] Timestamp inicio:', new Date().toISOString());
        console.log('üåê [URL] URL actual:', window.location.href);
        console.log('üë§ [USER] User agent:', navigator.userAgent);
        
        // Manejo del modal de eliminar
        const deleteModal = document.getElementById('deleteModal');
        const deleteForm = document.getElementById('deleteForm');
        
        if (deleteModal) {
            console.log('‚úÖ [MODAL] Modal de eliminaci√≥n encontrado');
            
            // Evento cuando se abre el modal
            deleteModal.addEventListener('show.bs.modal', function (event) {
                console.log('üìñ [MODAL] Modal de eliminaci√≥n abri√©ndose...');
                console.log('üïê [TIME] Timestamp modal opening:', new Date().toISOString());
                
                const button = event.relatedTarget;
                const productoId = button.getAttribute('data-id');
                const productoNombre = button.getAttribute('data-nombre');
                
                console.log(`üéØ [MODAL] Producto seleccionado para eliminar:`, {
                    id: productoId,
                    nombre: productoNombre,
                    button: button,
                    buttonTagName: button.tagName,
                    buttonClasses: button.className
                });
                
                document.getElementById('productoNombre').textContent = productoNombre;
                const actionUrl = "{% url 'dashboard:eliminar_producto_venta' 0 %}".replace('0', productoId);
                document.getElementById('deleteForm').action = actionUrl;
                
                console.log(`üîó [MODAL] URL de eliminaci√≥n configurada: ${actionUrl}`);
                console.log(`üìã [FORM] Formulario action actualizado a: ${document.getElementById('deleteForm').action}`);
            });
            
            // Evento cuando se confirma el modal
            deleteModal.addEventListener('shown.bs.modal', function (event) {
                console.log('‚úÖ [MODAL] Modal completamente visible');
                console.log('üïê [TIME] Timestamp modal shown:', new Date().toISOString());
            });
            
            // Evento cuando se oculta el modal
            deleteModal.addEventListener('hide.bs.modal', function (event) {
                console.log('‚ùå [MODAL] Modal cerr√°ndose...');
                console.log('üïê [TIME] Timestamp modal hiding:', new Date().toISOString());
            });
            
            // Evento cuando el modal se ha ocultado completamente
            deleteModal.addEventListener('hidden.bs.modal', function (event) {
                console.log('üîí [MODAL] Modal completamente cerrado');
                console.log('üïê [TIME] Timestamp modal hidden:', new Date().toISOString());
            });
        } else {
            console.error('‚ùå [ERROR] Modal de eliminaci√≥n NO encontrado');
        }
        
        // Manejo del formulario de eliminaci√≥n
        if (deleteForm) {
            console.log('‚úÖ [FORM] Formulario de eliminaci√≥n encontrado');
            console.log('üìã [FORM] Action inicial del formulario:', deleteForm.action);
            console.log('üìã [FORM] M√©todo del formulario:', deleteForm.method);
            
            deleteForm.addEventListener('submit', function(event) {
                console.log('üöÄ [FORM] ¬°¬°¬°FORMULARIO DE ELIMINACI√ìN ENVIADO!!!');
                console.log('üïê [TIME] Timestamp form submit:', new Date().toISOString());
                console.log('üìã [FORM] Datos del formulario al enviar:', {
                    action: this.action,
                    method: this.method,
                    elements: this.elements.length,
                    formData: new FormData(this)
                });
                
                // PREVENIR EL ENV√çO NORMAL DEL FORMULARIO
                event.preventDefault();
                console.log('üõë [FORM] Env√≠o normal PREVENIDO - usando AJAX...');
                
                // Obtener CSRF token
                const csrfToken = this.querySelector('[name=csrfmiddlewaretoken]');
                console.log('üîê [CSRF] Token encontrado:', csrfToken ? 'S√ç' : 'NO');
                if (csrfToken) {
                    console.log('üîê [CSRF] Valor del token:', csrfToken.value.substring(0, 10) + '...');
                }
                
                // Log de todos los datos del formulario
                const formData = new FormData(this);
                console.log('üìä [FORM] Todos los datos del formulario:');
                for (let [key, value] of formData.entries()) {
                    console.log(`   ${key}: ${value}`);
                }
                
                // Log antes de enviar AJAX
                console.log('‚è≥ [AJAX] ¬°¬°¬°ENVIANDO PETICI√ìN AJAX DE ELIMINACI√ìN AHORA!!!');
                console.log('üéØ [AJAX] URL destino:', this.action);
                console.log('üì° [AJAX] M√©todo HTTP:', this.method.toUpperCase());
                
                // Deshabilitar el bot√≥n de eliminar mientras se procesa
                const submitButton = this.querySelector('button[type="submit"]');
                const originalText = submitButton.textContent;
                submitButton.disabled = true;
                submitButton.textContent = 'Eliminando...';
                
                // Obtener informaci√≥n del producto antes de enviar
                const productoId = this.action.split('/').filter(Boolean).pop();
                const productoNombre = document.getElementById('productoNombre').textContent;
                const productoCard = document.querySelector(`[data-product-id="${productoId}"]`);
                const productoInfo = {
                    id: productoId,
                    nombre: productoNombre,
                    card: productoCard ? true : false,
                    precio: productoCard ? productoCard.querySelector('.text-success').textContent : 'N/A',
                    categoria: productoCard ? productoCard.querySelector('.badge.bg-light') ? 
                                productoCard.querySelector('.badge.bg-light').textContent : 'Sin categor√≠a' : 'N/A'
                };
                
                console.log(`üîç [DEBUG] Informaci√≥n pre-eliminaci√≥n:`, productoInfo);
                console.log(`üîç [DEBUG] URL acci√≥n: ${this.action}`);
                console.log(`üîç [DEBUG] M√©todo HTTP: ${this.method.toUpperCase()}`);
                console.log(`üîç [DEBUG] Timestamp: ${new Date().toISOString()}`);

                // Preparar FormData con informaci√≥n adicional para debugging
                const formData = new FormData(this);
                formData.append('debug_timestamp', new Date().toISOString());
                formData.append('debug_browser', navigator.userAgent);
                formData.append('debug_producto_info', JSON.stringify(productoInfo));

                // Log detallado del FormData
                let formDataDetails = {};
                for (let [key, value] of formData.entries()) {
                    formDataDetails[key] = value;
                    console.log(`üì§ [FORM-DATA] Campo: ${key}, Valor: ${value}`);
                }
                
                // Enviar via AJAX con m√°s instrumentaci√≥n
                console.log(`üöÄ [AJAX] Iniciando fetch a ${this.action}...`);
                
                fetch(this.action, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        'X-Debug-Delete': 'true',
                        'X-Debug-Timestamp': new Date().toISOString()
                    },
                    credentials: 'same-origin' // Asegura env√≠o de cookies
                })
                .then(response => {
                    // Log extremadamente detallado de la respuesta
                    console.log(`üì• [AJAX] Respuesta recibida para producto ${productoId} (${productoNombre})`);
                    console.log('üìä [AJAX] Status:', response.status);
                    console.log('üìä [AJAX] Status Text:', response.statusText);
                    console.log('üìä [AJAX] OK:', response.ok);
                    console.log('üìä [AJAX] Type:', response.type);
                    console.log('üìä [AJAX] URL final:', response.url);
                    console.log('üìä [AJAX] Redirected:', response.redirected);
                    
                    // Log de todos los headers
                    console.log('ÔøΩ [AJAX] Headers recibidos:');
                    const headersObj = {};
                    response.headers.forEach((value, key) => {
                        console.log(`   ${key}: ${value}`);
                        headersObj[key] = value;
                    });
                    console.log('üì® [AJAX] Headers como objeto:', headersObj);
                    
                    // Intentar determinar el tipo de respuesta
                    const contentType = response.headers.get('content-type');
                    console.log('üìÑ [AJAX] Content-Type:', contentType);
                    
                    // Verificar si la respuesta es ok
                    if (response.ok) {
                        if (contentType && contentType.includes('application/json')) {
                            console.log('üìã [AJAX] Procesando respuesta JSON...');
                            return response.json()
                                .then(data => {
                                    console.log('üîç [AJAX] Datos JSON parseados correctamente:', data);
                                    return data;
                                })
                                .catch(jsonError => {
                                    console.error('‚ö†Ô∏è [AJAX] Error al parsear JSON:', jsonError);
                                    // Intentar obtener el texto de la respuesta
                                    return response.text().then(text => {
                                        console.log('üìú [AJAX] Respuesta como texto:', text.substring(0, 200) + '...');
                                        throw new Error(`Error al parsear JSON: ${jsonError.message}`);
                                    });
                                });
                        } else {
                            // Si no es JSON, intentar leer el texto de la respuesta
                            console.log('üìú [AJAX] Respuesta no es JSON, leyendo como texto...');
                            return response.text()
                                .then(text => {
                                    console.log('üìú [AJAX] Respuesta como texto (primeros 200 chars):', 
                                              text.substring(0, 200) + (text.length > 200 ? '...' : ''));
                                    
                                    // Verificar si el texto contiene indicaciones de √©xito
                                    const lowercaseText = text.toLowerCase();
                                    const containsSuccess = lowercaseText.includes('success') || 
                                                         lowercaseText.includes('√©xito') ||
                                                         lowercaseText.includes('eliminado');
                                    
                                    // Verificar si hubo redirect a la lista de productos
                                    const isRedirectToList = response.url.includes('productos-venta') && 
                                                            !response.url.includes('eliminar');
                                    
                                    if (containsSuccess || isRedirectToList) {
                                        console.log('‚úÖ [AJAX] Detecci√≥n de √©xito en respuesta de texto');
                                        return { 
                                            success: true, 
                                            message: 'Producto eliminado correctamente',
                                            responseType: 'text',
                                            isRedirect: isRedirectToList
                                        };
                                    } else {
                                        // Buscar mensaje de error en el HTML
                                        const errorMatch = text.match(/<div class="alert alert-danger"[^>]*>([\s\S]*?)<\/div>/i);
                                        const errorMessage = errorMatch ? 
                                            errorMatch[1].replace(/<[^>]*>/g, '').trim() : 
                                            'Respuesta HTML sin mensaje de error claro';
                                        
                                        console.warn('‚ö†Ô∏è [AJAX] No se detect√≥ √©xito en la respuesta');
                                        return { 
                                            success: false, 
                                            message: errorMessage,
                                            responseType: 'text',
                                            htmlResponse: true
                                        };
                                    }
                                })
                                .catch(textError => {
                                    console.error('‚ö†Ô∏è [AJAX] Error al leer respuesta como texto:', textError);
                                    return { 
                                        success: true, 
                                        message: 'Se recibi√≥ respuesta pero no se pudo leer el contenido',
                                        responseType: 'unknown'
                                    };
                                });
                        }
                    } else {
                        // Respuesta no OK
                        console.error(`‚ùå [AJAX] Error HTTP: ${response.status} ${response.statusText}`);
                        return response.text()
                            .then(text => {
                                console.error('üìú [AJAX] Texto de error:', text.substring(0, 200) + '...');
                                throw new Error(`Error HTTP ${response.status}: ${response.statusText}`);
                            })
                            .catch(textError => {
                                throw new Error(`Error HTTP ${response.status}: ${response.statusText}`);
                            });
                    }
                })
                .then(data => {
                    console.log('‚úÖ [AJAX] Datos de respuesta procesados:', data);
                    
                    // Extraer ID del producto del URL para verificaci√≥n
                    const urlParts = this.action.split('/');
                    const productoId = urlParts[urlParts.length - 2];
                    const productoNombre = document.getElementById('productoNombre').textContent;
                    
                    console.log(`üîÑ [VERIFICACI√ìN] Verificando eliminaci√≥n del producto ID: ${productoId} (${productoNombre})`);
                    console.log(`üïê [VERIFICACI√ìN] Timestamp inicio verificaci√≥n: ${new Date().toISOString()}`);
                    console.log(`üåê [VERIFICACI√ìN] URL de verificaci√≥n: /dashboard/api/verificar-producto/${productoId}/`);
                    
                    // Verificar en el DOM si el elemento ya no est√° visible
                    const cardElement = document.querySelector(`[data-product-id="${productoId}"]`);
                    const cardContainer = document.getElementById(`producto-card-${productoId}`);
                    console.log(`üîç [VERIFICACI√ìN-DOM] Card element: ${cardElement ? 'EXISTE' : 'NO EXISTE'}`);
                    console.log(`üîç [VERIFICACI√ìN-DOM] Card container: ${cardContainer ? 'EXISTE' : 'NO EXISTE'}`);
                    
                    // Si existe, ocultarlo visualmente mientras verificamos con el backend
                    if (cardContainer) {
                        cardContainer.style.opacity = '0.5';
                        cardContainer.style.transform = 'scale(0.95)';
                        cardContainer.style.transition = 'all 0.5s ease';
                    }
                    
                    // Hacer 3 intentos de verificaci√≥n con intervalo de 500ms entre cada uno
                    function verificarProducto(intento = 1, maxIntentos = 3) {
                        console.log(`üîç [VERIFICACI√ìN] Intento #${intento} de ${maxIntentos}`);
                        
                        return fetch(`/dashboard/api/verificar-producto/${productoId}/`, {
                            method: 'GET',
                            headers: {
                                'X-Requested-With': 'XMLHttpRequest',
                                'X-Verification': 'true',
                                'X-Verification-Attempt': intento,
                                'X-Verification-Max': maxIntentos
                            }
                        })
                        .then(verifyResponse => {
                            console.log(`üì• [VERIFICACI√ìN] Respuesta HTTP: ${verifyResponse.status} ${verifyResponse.statusText}`);
                            return verifyResponse.json();
                        })
                        .then(verifyData => {
                            console.log(`üîç [VERIFICACI√ìN] Datos: `, verifyData);
                            
                            if (verifyData.exists === false) {
                                console.log(`‚úÖ [VERIFICACI√ìN] √âXITO: Producto ID ${productoId} eliminado de la base de datos`);
                                return verifyData;
                            } else if (intento < maxIntentos) {
                                console.log(`‚è≥ [VERIFICACI√ìN] Producto todav√≠a existe. Esperando 500ms para reintentar...`);
                                return new Promise(resolve => setTimeout(() => {
                                    resolve(verificarProducto(intento + 1, maxIntentos));
                                }, 500));
                            } else {
                                console.error(`‚ùå [VERIFICACI√ìN] FALLO: Producto todav√≠a existe despu√©s de ${maxIntentos} intentos`);
                                return verifyData;
                            }
                        });
                    }
                    
                    // Comenzar el proceso de verificaci√≥n
                    verificarProducto()
                        .then(verifyData => {
                            if (verifyData.exists === false) {
                                // Producto eliminado con √©xito
                                console.log('‚úÖ [VERIFICACI√ìN] Producto eliminado confirmado en base de datos');
                                procesoExitoso();
                            } else {
                                // Producto todav√≠a existe, ofrecer eliminaci√≥n forzada
                                console.error('‚ö†Ô∏è [VERIFICACI√ìN] Producto todav√≠a existe en la base de datos');
                                
                                // Verificar dependencias del producto
                                if (verifyData.dependencias && verifyData.dependencias.length > 0) {
                                    console.warn(`‚ö†Ô∏è [DEPENDENCIAS] Producto tiene ${verifyData.dependencias.length} dependencias`);
                                    console.warn(`‚ö†Ô∏è [DEPENDENCIAS] Detalles:`, verifyData.dependencias);
                                }
                                
                                // Mostrar alerta al usuario
                                const alertDiv = document.createElement('div');
                                alertDiv.className = 'alert alert-warning alert-dismissible fade show position-fixed';
                                alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);';
                                alertDiv.innerHTML = `
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    <strong>Advertencia:</strong> No se pudo eliminar el producto completamente.<br>
                                    <small class="d-block mt-1">El producto sigue existiendo en la base de datos.</small>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                `;
                                document.body.appendChild(alertDiv);
                                
                                // A√±adir bot√≥n de eliminaci√≥n forzada
                                const forzarDiv = document.createElement('div');
                                forzarDiv.className = 'position-fixed';
                                forzarDiv.style.cssText = 'bottom: 20px; right: 20px; z-index: 9999;';
                                forzarDiv.innerHTML = `
                                    <button class="btn btn-danger" id="btnEliminarForzado">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        Forzar eliminaci√≥n de "${productoNombre}"
                                    </button>
                                `;
                                document.body.appendChild(forzarDiv);
                                
                                // Cerrar el modal
                                const modal = bootstrap.Modal.getInstance(deleteModal);
                                if (modal) {
                                    modal.hide();
                                }
                                
                                // Manejar clic en bot√≥n de eliminaci√≥n forzada
                                document.getElementById('btnEliminarForzado').addEventListener('click', function() {
                                    this.disabled = true;
                                    this.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Forzando eliminaci√≥n...';
                                    
                                    console.log(`üî• [FORZAR] Iniciando eliminaci√≥n forzada para producto ID ${productoId}`);
                                    
                                    // Obtener token CSRF del formulario original
                                    const csrfToken = document.querySelector('[name=csrfmiddlewaretoken]').value;
                                    
                                    fetch(`/dashboard/productos-venta/${productoId}/eliminar-forzado/`, {
                                        method: 'POST',
                                        headers: {
                                            'X-Requested-With': 'XMLHttpRequest',
                                            'X-Force-Delete': 'true',
                                            'Content-Type': 'application/json',
                                            'X-CSRFToken': csrfToken
                                        },
                                        body: JSON.stringify({
                                            force: true,
                                            csrftoken: csrfToken,
                                            timestamp: new Date().toISOString(),
                                            usuario: 'user-interface'
                                        })
                                    })
                                    .then(response => response.json())
                                    .then(data => {
                                        console.log(`üì• [FORZAR] Respuesta:`, data);
                                        
                                        if (data.success) {
                                            console.log(`‚úÖ [FORZAR] Eliminaci√≥n forzada exitosa`);
                                            
                                            // Mostrar mensaje de √©xito
                                            const successAlert = document.createElement('div');
                                            successAlert.className = 'alert alert-success alert-dismissible fade show position-fixed';
                                            successAlert.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);';
                                            successAlert.innerHTML = `
                                                <i class="fas fa-check-circle me-2"></i>
                                                <strong>¬°√âxito!</strong> ${data.message || 'Producto eliminado correctamente mediante eliminaci√≥n forzada'}
                                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                            `;
                                            document.body.appendChild(successAlert);
                                            
                                            // Recargar p√°gina despu√©s de mostrar el mensaje
                                            setTimeout(() => {
                                                console.log('üîÑ [FORZAR] Recargando p√°gina ahora...');
                                                window.location.reload();
                                            }, 1500);
                                        } else {
                                            console.error(`‚ùå [FORZAR] Error en eliminaci√≥n forzada:`, data.message);
                                            this.disabled = false;
                                            this.innerHTML = '<i class="fas fa-exclamation-triangle me-2"></i> Intentar nuevamente';
                                            
                                            // Mostrar mensaje de error
                                            const errorAlert = document.createElement('div');
                                            errorAlert.className = 'alert alert-danger alert-dismissible fade show position-fixed';
                                            errorAlert.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);';
                                            errorAlert.innerHTML = `
                                                <i class="fas fa-exclamation-circle me-2"></i>
                                                <strong>Error:</strong> ${data.message || 'Error en eliminaci√≥n forzada'}
                                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                            `;
                                            document.body.appendChild(errorAlert);
                                        }
                                    })
                                    .catch(e => {
                                        console.error(`üí• [FORZAR] Error:`, e);
                                        this.disabled = false;
                                        this.innerHTML = '<i class="fas fa-exclamation-triangle me-2"></i> Intentar nuevamente';
                                        
                                        // Mostrar mensaje de error
                                        const errorAlert = document.createElement('div');
                                        errorAlert.className = 'alert alert-danger alert-dismissible fade show position-fixed';
                                        errorAlert.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);';
                                        errorAlert.innerHTML = `
                                            <i class="fas fa-exclamation-circle me-2"></i>
                                            <strong>Error:</strong> ${e.message || 'Error de conexi√≥n en eliminaci√≥n forzada'}
                                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                        `;
                                        document.body.appendChild(errorAlert);
                                    });
                                });
                            }
                        })
                        .catch(verifyError => {
                            console.error('üí• [VERIFICACI√ìN] Error:', verifyError);
                            
                            // Si falla la verificaci√≥n pero el backend report√≥ √©xito, consideramos que fue exitoso
                            if (data.success !== false) {
                                console.log('üéØ [VERIFICACI√ìN] Asumiendo √©xito basado en la respuesta original');
                                procesoExitoso();
                            } else {
                                procesarError(`Error de verificaci√≥n: ${verifyError.message}`);
                            }
                        });
                    
                    // Funci√≥n para procesar √©xito
                    function procesoExitoso() {
                        // Restaurar bot√≥n
                        submitButton.disabled = false;
                        submitButton.textContent = originalText;
                        
                        // Cerrar el modal
                        const modal = bootstrap.Modal.getInstance(deleteModal);
                        if (modal) {
                            modal.hide();
                            console.log('üîí [MODAL] Modal cerrado tras eliminaci√≥n exitosa');
                        }
                        
                        console.log('üéâ [AJAX] Eliminaci√≥n exitosa confirmada, mostrando mensaje...');
                        
                        // Mostrar mensaje de √©xito con mejor UI
                        const alertDiv = document.createElement('div');
                        alertDiv.className = 'alert alert-success alert-dismissible fade show position-fixed';
                        alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);';
                        alertDiv.innerHTML = `
                            <i class="fas fa-check-circle me-2"></i>
                            <strong>¬°√âxito!</strong> ${data.message || 'Producto eliminado correctamente'}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        `;
                        document.body.appendChild(alertDiv);
                        
                        // Ocultar la tarjeta del producto eliminado antes del reload
                        try {
                            const cardElement = document.querySelector(`[data-product-id="${productoId}"]`);
                            if (cardElement) {
                                cardElement.style.opacity = '0.5';
                                cardElement.style.transform = 'scale(0.95)';
                                cardElement.style.transition = 'all 0.5s ease';
                            }
                        } catch (e) {
                            console.error('Error ocultando producto:', e);
                        }
                        
                        // Recargar p√°gina despu√©s de mostrar el mensaje
                        setTimeout(() => {
                            console.log('üîÑ [AJAX] Recargando p√°gina ahora...');
                            window.location.reload();
                        }, 1500);
                    }
                    
                    // Funci√≥n para procesar error
                    function procesarError(mensaje) {
                        // Restaurar bot√≥n
                        submitButton.disabled = false;
                        submitButton.textContent = originalText;
                        
                        // Mostrar error
                        console.error('‚ùå [AJAX] Error en eliminaci√≥n:', mensaje);
                        
                        // Mostrar mensaje de error con mejor UI
                        const alertDiv = document.createElement('div');
                        alertDiv.className = 'alert alert-danger alert-dismissible fade show position-fixed';
                        alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);';
                        alertDiv.innerHTML = `
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <strong>Error:</strong> ${mensaje}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        `;
                        document.body.appendChild(alertDiv);
                    }
                })
                .catch(error => {
                    console.error('üí• [AJAX] Error en petici√≥n:', error);
                    console.error('Stack trace:', error.stack);
                    
                    // Restaurar bot√≥n
                    submitButton.disabled = false;
                    submitButton.textContent = originalText;
                    
                    // Extraer ID del producto del URL para verificaci√≥n
                    const urlParts = this.action.split('/');
                    const productoId = urlParts[urlParts.length - 2];
                    
                    console.log(`üîÑ [ERROR-VERIFICATION] Verificando estado del producto ID: ${productoId} tras error`);
                    
                    // A pesar del error, verificar si el producto fue eliminado
                    fetch(`/dashboard/api/verificar-producto/${productoId}/`, {
                        method: 'GET',
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest',
                            'X-Error-Verification': 'true'
                        }
                    })
                    .then(verifyResponse => verifyResponse.json())
                    .then(verifyData => {
                        console.log('üîç [ERROR-VERIFICATION] Respuesta:', verifyData);
                        
                        if (verifyData.exists === false) {
                            // El producto fue eliminado a pesar del error en la respuesta
                            console.log('‚úÖ [ERROR-VERIFICATION] Producto eliminado confirmado a pesar del error');
                            
                            // Mostrar mensaje de √©xito
                            const alertDiv = document.createElement('div');
                            alertDiv.className = 'alert alert-success alert-dismissible fade show position-fixed';
                            alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);';
                            alertDiv.innerHTML = `
                                <i class="fas fa-check-circle me-2"></i>
                                <strong>¬°√âxito!</strong> Producto eliminado correctamente (a pesar de errores de comunicaci√≥n)
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            `;
                            document.body.appendChild(alertDiv);
                            
                            // Cerrar el modal
                            const modal = bootstrap.Modal.getInstance(deleteModal);
                            if (modal) {
                                modal.hide();
                            }
                            
                            // Recargar p√°gina despu√©s de mostrar el mensaje
                            setTimeout(() => {
                                console.log('üîÑ [AJAX] Recargando p√°gina ahora...');
                                window.location.reload();
                            }, 1800);
                        } else {
                            // El producto sigue existiendo, hubo un error real
                            console.error('‚ö†Ô∏è [ERROR-VERIFICATION] Error confirmado, producto todav√≠a existe');
                            
                            // Detalles adicionales para diagn√≥stico
                            const errorDetails = {
                                errorType: error.name,
                                errorMessage: error.message,
                                productId: productoId,
                                formAction: this.action,
                                timestamp: new Date().toISOString(),
                                verificacionResultado: verifyData
                            };
                            
                            console.error('üìä [ERROR-DETAILS] Detalles completos del error:', errorDetails);
                            
                            // Mostrar mensaje de error con detalles
                            const alertDiv = document.createElement('div');
                            alertDiv.className = 'alert alert-danger alert-dismissible fade show position-fixed';
                            alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);';
                            alertDiv.innerHTML = `
                                <i class="fas fa-exclamation-circle me-2"></i>
                                <strong>Error:</strong> ${error.message || 'Error de conexi√≥n al eliminar el producto'}<br>
                                <small class="d-block mt-1">ID: ${productoId} | Hora: ${new Date().toLocaleTimeString()}</small>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            `;
                            document.body.appendChild(alertDiv);
                            
                            // Auto-cerrar alert despu√©s de 8 segundos
                            setTimeout(() => {
                                if (alertDiv.parentNode) {
                                    alertDiv.remove();
                                }
                            }, 8000);
                            
                            // A√±adir bot√≥n de eliminaci√≥n forzada
                            const forzarDiv = document.createElement('div');
                            forzarDiv.className = 'position-fixed';
                            forzarDiv.style.cssText = 'bottom: 20px; right: 20px; z-index: 9999;';
                            forzarDiv.innerHTML = `
                                <button class="btn btn-danger" id="btnEliminarForzado">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    Intentar eliminaci√≥n forzada
                                </button>
                            `;
                            document.body.appendChild(forzarDiv);
                            
                            // Manejar clic en bot√≥n de eliminaci√≥n forzada
                            document.getElementById('btnEliminarForzado').addEventListener('click', function() {
                                this.disabled = true;
                                this.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Forzando eliminaci√≥n...';
                                
                                fetch(`/dashboard/api/eliminar-forzado/${productoId}/`, {
                                    method: 'POST',
                                    headers: {
                                        'X-Requested-With': 'XMLHttpRequest',
                                        'X-Force-Delete': 'true',
                                        'Content-Type': 'application/json'
                                    },
                                    body: JSON.stringify({
                                        force: true,
                                        csrftoken: document.querySelector('[name=csrfmiddlewaretoken]').value
                                    })
                                })
                                .then(response => response.json())
                                .then(data => {
                                    if (data.success) {
                                        window.location.reload();
                                    } else {
                                        alert('Error en eliminaci√≥n forzada: ' + data.message);
                                        this.disabled = false;
                                        this.innerHTML = '<i class="fas fa-exclamation-triangle me-2"></i> Intentar eliminaci√≥n forzada';
                                    }
                                })
                                .catch(e => {
                                    alert('Error en eliminaci√≥n forzada');
                                    this.disabled = false;
                                    this.innerHTML = '<i class="fas fa-exclamation-triangle me-2"></i> Intentar eliminaci√≥n forzada';
                                });
                            });
                        }
                    })
                    .catch(verifyError => {
                        // Error en la verificaci√≥n
                        console.error('üí• [ERROR-VERIFICATION] Error al verificar:', verifyError);
                        
                        // Mostrar mensaje de error est√°ndar
                        const alertDiv = document.createElement('div');
                        alertDiv.className = 'alert alert-danger alert-dismissible fade show position-fixed';
                        alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);';
                        alertDiv.innerHTML = `
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <strong>Error:</strong> ${error.message || 'Error de conexi√≥n al eliminar el producto'}<br>
                            <small class="d-block mt-1">No se pudo verificar el estado del producto.</small>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        `;
                        document.body.appendChild(alertDiv);
                        
                        // Auto-cerrar alert despu√©s de 5 segundos
                        setTimeout(() => {
                            if (alertDiv.parentNode) {
                                alertDiv.remove();
                            }
                        }, 5000);
                    });
                });
            });
            
            // Evento antes de enviar el formulario (captura adicional)
            deleteForm.addEventListener('beforesubmit', function(event) {
                console.log('‚ö° [FORM] Evento beforesubmit capturado');
            });
            
        } else {
            console.error('‚ùå [ERROR] Formulario de eliminaci√≥n NO encontrado');
        }
        
        // Logs para botones de eliminar
        const deleteButtons = document.querySelectorAll('button[data-bs-toggle="modal"][data-bs-target="#deleteModal"]');
        console.log(`üîç [BUTTONS] Encontrados ${deleteButtons.length} botones de eliminar`);
        
        deleteButtons.forEach((button, index) => {
            const productId = button.getAttribute('data-id');
            const productName = button.getAttribute('data-nombre');
            console.log(`üîò [BUTTON-${index}] ID: ${productId}, Nombre: ${productName}`);
            
            button.addEventListener('click', function() {
                console.log(`üëÜ [CLICK] Bot√≥n de eliminar clickeado para producto: ${productName} (ID: ${productId})`);
                console.log('üïê [TIME] Timestamp click:', new Date().toISOString());
                console.log('üéØ [CLICK] Datos del bot√≥n:', {
                    id: productId,
                    nombre: productName,
                    target: button.getAttribute('data-bs-target'),
                    toggle: button.getAttribute('data-bs-toggle')
                });
            });
        });
        
        console.log('üéä [PRODUCTOS] Inicializaci√≥n completada');
        console.log('üïê [TIME] Timestamp fin inicializaci√≥n:', new Date().toISOString());
    });
    
    // Log adicional para el evento de descarga de la p√°gina
    window.addEventListener('beforeunload', function(event) {
        console.log('üîÑ [PAGE] P√°gina a punto de recargarse/cerrarse');
        console.log('üïê [TIME] Timestamp beforeunload:', new Date().toISOString());
        console.log('üí≠ [PAGE] Posible causa: env√≠o de formulario o navegaci√≥n');
    });
    
    // Log cuando la p√°gina se est√° descargando
    window.addEventListener('unload', function(event) {
        console.log('üö™ [PAGE] P√°gina descarg√°ndose ahora');
        console.log('üïê [TIME] Timestamp unload:', new Date().toISOString());
    });
    
    // Log para capturar env√≠os de formularios a nivel global
    document.addEventListener('submit', function(event) {
        console.log('üìù [GLOBAL] Formulario enviado globalmente:', {
            form: event.target,
            action: event.target.action,
            method: event.target.method,
            timestamp: new Date().toISOString()
        });
    });
    
    // Log para capturar cambios en la URL (navegaci√≥n)
    let currentUrl = window.location.href;
    setInterval(function() {
        if (window.location.href !== currentUrl) {
            console.log('üîÑ [NAV] URL cambi√≥ de:', currentUrl);
            console.log('üîÑ [NAV] URL cambi√≥ a:', window.location.href);
            currentUrl = window.location.href;
        }
    }, 100);
    
    // Log para errores JavaScript
    window.addEventListener('error', function(event) {
        console.error('ÔøΩ [JS-ERROR] Error JavaScript:', {
            message: event.message,
            filename: event.filename,
            lineno: event.lineno,
            colno: event.colno,
            error: event.error,
            timestamp: new Date().toISOString()
        });
    });
    
    // Log para errores de promesas no capturadas
    window.addEventListener('unhandledrejection', function(event) {
        console.error('üí• [PROMISE-ERROR] Error de promesa no capturada:', {
            reason: event.reason,
            promise: event.promise,
            timestamp: new Date().toISOString()
        });
    });
    
    // Log para clicks globales (debugging)
    document.addEventListener('click', function(event) {
        if (event.target.matches('button, a, [data-bs-toggle]')) {
            console.log('üëÜ [GLOBAL-CLICK] Click en elemento interactivo:', {
                element: event.target.tagName,
                classes: event.target.className,
                id: event.target.id,
                text: event.target.textContent?.trim().substring(0, 50),
                timestamp: new Date().toISOString()
            });
        }
    });
</script>
